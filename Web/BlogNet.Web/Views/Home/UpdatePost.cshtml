@model BlogPost

@{
    ViewData["Title"] = "Add Post";
}
<form asp-action="UpdatePost" method="post">
    <div class="text-center">
        <h1 class="display-4">Update Post</h1>
        <table class="table table-sm table-striped table-bordered m-2">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="hidden" name="PostId" value="@Model.PostId"> <input name="Title" value="@Model.Title" /></td>
                    <td> <textarea name="Content" rows="5" cols="80">@Model.Content</textarea></td>
                </tr>
            </tbody>
        </table>
        <div class="text-center">
            <button type="submit">Update</button>
        </div>
    </div>
</form>